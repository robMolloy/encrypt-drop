{
  "name": "encryptdrop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "next lint",
    "build": "next build",
    "start": "next start",
    "dev": "next dev",
    "dev:offline": "NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true next dev -p 3006",
    "tsc": "node_modules/.bin/tsc --noemit --watch",
    "firebase:emulators-start": "node_modules/.bin/firebase --export-on-exit=\"./firebase/caches/history/$(date +%Y-%m-%d+%H:%M:%S)\" --import=\"./firebase/caches/seeds/seed1\" emulators:start",
    "firebase:emulators-start:offline": "node_modules/.bin/firebase --export-on-exit=\"./firebase/caches/history/$(date +%Y-%m-%d+%H:%M:%S)\" --import=\"./firebase/caches/seeds/seed1\" --project demo-project emulators:start --only auth,firestore,storage",
    "firebase:emulators-start:offline-without-import-export": "firebase --project demo-project emulators:start --only auth,firestore",
    "functions:build:watch": "cd functions && npm run build:watch",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll --detectOpenHandles",
    "dev1": "npm run dev:offline",
    "dev2": "npm run tsc"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@stripe/react-stripe-js": "^3.1.1",
    "@stripe/stripe-js": "^5.5.0",
    "firebase": "^10.12.3",
    "lodash": "^4.17.21",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.4",
    "@tailwindcss/typography": "^0.5.13",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "daisyui": "^4.10.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "firebase-tools": "^13.15.0",
    "jest": "^29.7.0",
    "postcss": "^8",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.3",
    "typescript": "5.5.4"
  }
}
